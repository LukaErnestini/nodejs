<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
        <h1>No orders ...</h1>
        <% } else { %>
        <ul>
            <% orders.forEach(order => { %>
            <li>

                <h1>#<%= order._id %></h1>
                <ul>
                    <% //console.log(JSON.stringify(order, null, 4)); %>
                    <% order.items.forEach(p => { %>
                    <li><%= p.title %> (<%= p.quantity %>)</li>
                    <% }) %>
                </ul>
            </li>

            <% }) %>
        </ul>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>