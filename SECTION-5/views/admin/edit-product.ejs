<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css" />
<link rel="stylesheet" href="/css/forms.css" />
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing === 'true') { %>edit-product/<%= product._id %> 
            <% } else { %>add-product<% } %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title"
                    value="<% if (editing === 'true') { %><%= product.title %><% }%>" />
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea type="text" name="description" id="description"
                    rows="5"><% if (editing === 'true') { %><%= product.description %><% }%></textarea>
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl"
                    value="<% if (editing === 'true') { %><%= product.imageUrl %><% }%>" />
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" min="0" step=".01" name="price" id="price"
                    value="<% if (editing === 'true') { %><%= product.price %><% }%>" />
            </div>
            <button class="btn" type="submit"><% if (editing === 'true') { %> Update Product
                <% } else { %> Add Product <% } %>
            </button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>